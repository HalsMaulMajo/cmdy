{
  "name": "cmdy",
  "description": "A simple cmd parser framework for node js/ts cli apps.",
  "version": "1.2.2",
  "main": "dist/index.js",
  "author": "majo418",
  "license": "MIT",
  "private": false,
  "keywords": [
    "typescript",
    "node",
    "lib",
    "cli",
    "cmd",
    "arg",
    "command"
  ],
  "scripts": {
    "tsc": "tsc -p tsconfig.json",
    "start": "ts-node src/index.ts",
    "exec": "node dist/index.js",
    "test": "mocha --require ts-node/register src/test/**/*.test.ts",
    "build": "npm run tsc",
    "start:watch": "nodemon --ext \"*.ts\" -w \"${PWD}/src/**/*\" -x \"npm run start\"",
    "build:watch": "nodemon --ext \"*.ts\" -w \"${PWD}/src/**/*\" -x \"npm run build\"",
    "test:watch": "nodemon -w \"${PWD}/src/**/*\" -x \"npm run test\"",
    "exec:watch": "nodemon -w \"${PWD}/dist/**/*\" -x \"npm run exec\"",
    "dev": "npm run start:watch"
  },
  "devDependencies": {
    "@types/chai": "^4",
    "@types/mocha": "^8",
    "@types/node": "^16.11.12",
    "chai": "^4",
    "mocha": "^9",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.3"
  }
}